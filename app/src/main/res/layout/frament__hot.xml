<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff3344"
        android:orientation="horizontal">

    <ImageView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_add"
        android:id="@+id/imageView_add"
        android:layout_gravity="right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="笑神来了"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@android:color/white"/>

    <ImageView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/hot_refresh_level"
        android:id="@+id/imageView_refresh"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
       <TextView

           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="最热"
           android:layout_weight="1"
           android:layout_margin="10dp"
           android:id="@+id/textView_hot"
           android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="精华"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:id="@+id/textView_essence"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="图片"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:id="@+id/textView_image"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="段子"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:id="@+id/textView_section"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="声音"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:id="@+id/textView_sound"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="霸友秀"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:id="@+id/textView_tyrant"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="活动主题"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:id="@+id/textView_activityThem"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/imageView_hot"
                android:background="#ff0000"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/imageView_essence"
                android:background="#ff0000"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/imageView_image"
                android:background="#ff0000"/>
            <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/imageView_section"
            android:background="#ff0000"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/imageView_sound"
                android:background="#ff0000"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/imageView_tyrant"
                android:background="#ff0000"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/imageView_activityThem"
                android:background="#ff0000"/>
        </LinearLayout>
        </LinearLayout>
</LinearLayout>
